        <disclaimer lang="es_ES">Los videos son propiedad y tienen copyright de RTVA Andalucia.</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
        <news>What's new</news>
    </extension>
</addon>